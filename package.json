{
  "name": "bulma-smart-react-forms",
  "description": "A lightweight collection of Bulma elements as React components, with built in validators, error handlers, and a smart form",
  "version": "2024.11.14-BETA",
  "private": false,
  "type": "module",
  "main": "src/",
  "author": {
    "name": "Alex Navarro",
    "email": "alex@navarrotech.net",
    "url": "https://www.navarrotech.net",
    "organization": "NavarroTech"
  },
  "scripts": {
    "dev": "yarn install && vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "analyze": "vite-bundle-visualizer",
    "test": "vitest run --dom --coverage",
    "test:dev": "DEBUG_PRINT_LIMIT=100000 vitest watch --ui --dom --coverage.enabled=true",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:watch": "nodemon --exec 'yarn lint' --watch src --watch .eslintrc.js",
    "clean": "rm -rf dist && rm -rf node_modules",
    "reinstall": "yarn clean && yarn install"
  },
  "engines": {
    "node": ">=20.11.0",
    "yarn": ">=1.22.0"
  },
  "dependencies": {

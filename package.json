    "happy-dom": "^14.12.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-bundle-visualizer": "1.1.0",
    "vite-plugin-full-reload": "^1.2.0",
    "vite-plugin-svgr": "^4.2.0",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.4"

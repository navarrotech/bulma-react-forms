    "bulma-switch": "^2.0.4",
    "events": "^3.3.0",
    "fuzzy-search": "^3.2.1",
    "lodash-es": "^4.17.21",
    "moment-timezone": "^0.5.45",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.77.6",
    "uuid": "^10.0.0",
    "yup": "^1.4.0"
